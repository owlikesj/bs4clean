article
	.container
		.row
			.post-tags, .post-categories
				font-size 15px
				margin-top 30px
				margin-bottom 30px
				a
					border-bottom 1px dotted #ABABAB
					text-transform uppercase
					margin-right 10px
					&:hover, &:visited, &:active
						text-decoration none
						border-bottom none
			img
				max-width 100% !important
				height auto
				display inline-block
			.video-container
				position relative
				padding-bottom 56.25%
				padding-top 30px
				height 0
				overflow hidden
				iframe, object, embed
					position absolute
					top 0
					left 0
					width 100%
					height 100%
					margin-top 0
			h1, h2, h3
				margin-top 20px
			h4, h5, h6
				margin-top 10px
			blockquote
				padding .5rem 1rem
				margin-bottom 1rem
				font-size 1.25rem
				border-left .25rem solid #eceeef
				p
					margin: 0 0 1rem
					&:last-child
						margin: 0
				footer
					border-top none
					font-size 0.8em
					padding 0
					&:before
						content '\2014 \00A0'
					cite
						&:before
							content 'â€”'
							color #ccc
							padding 0 0.5em

figure.highlight
	background #eee
	margin-top 15px
	padding 7px 15px
	border-radius 2px
	text-shadow 0 0 1px #fff
	line-height 1.6
	overflow auto
	position relative
	font-size 0.9em
	figcaption
		color gray-light
		margin-bottom 5px
		text-shadow 0 0 1px #fff
		mono-font()
		a
			position absolute
			right 15px
	pre
		border none
		padding 0
		margin 0
		background none
		mono-font()
	table
		border-spacing 0
		.gutter
			color gray-light
			padding-right 15px
			border-right 1px solid #ddd
			text-align right
			user-select none
		.code
			padding-left 15px
			border-left 1px solid #fff
			color #666
		.line
			height 22px
			line-height 22px
		.line.marked
			background: #d6d6d6

