article
	.container
		.row
			.post-tags, .post-categories
				font-size 15px
				margin-top 30px
				margin-bottom 30px
				a
					border-bottom 1px dotted #ABABAB
					text-transform uppercase
					margin-right 10px
					&:hover, &:visited, &:active
						text-decoration none
						border-bottom none
			img
				max-width 100% !important
				height auto
				display inline-block
			.video-container
				position relative
				padding-bottom 56.25%
				padding-top 30px
				height 0
				overflow hidden
				iframe, object, embed
					position absolute
					top 0
					left 0
					width 100%
					height 100%
					margin-top 0
			blockquote
				padding .5rem 1rem
				margin-bottom 1rem
				font-size 1.25rem
				border-left .25rem solid #eceeef
				p
					margin: 0 0 1rem
					&:last-child
						margin: 0
				footer
					border-top none
					font-size 0.8em
					padding 0
					&:before
						content '\2014 \00A0'
					cite
						&:before
							content 'â€”'
							color #ccc
							padding 0 0.5em
